.picker {
  background-color: #fff;
  max-height: 700rpx;
}

.list {
  padding: 0 40rpx;
}
.picker .item {
  display: flex;
  align-items: center;
  color: #212732;
  padding: 24rpx 0;
  font-size: 30rpx;
  border-bottom: 1rpx solid #e6e6e6;
}

.picker .item.z-checked {
  color: #377fee;
}

.picker .item.z-checked .picked {
  flex-shrink: 0;
  display: block;
}

.picker .item .label {
  flex-grow: 1;
  white-space: nowrap;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
}

.picker .item .picked {
  display: none;
  width: 36rpx;
  height: 24rpx;
}

page {
  background-color: #dedede;
}
page swiper {
  height: 400rpx;
}
.box {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}
.avt {
  width: 100%;
  height: 100%;
  /* margin: 0 40rpx; */
  background-repeat: no-repeat;
  background-size: 100% 100%;
  /* background-position-x: center; */
}

.zoom-out {
  transform: scale(0.8);
  transition: all 0.4s ease-out 0s;
}

.zoom-in {
  transform: scale(1);
  transition: all 0.4s ease-in 0s;
}

.info {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 6rem;
  background-image: linear-gradient(
    to top,
    rgba(17, 64, 117, 1),
    rgba(17, 64, 117, 0)
  );
}

.name {
  font-size: 1.225rem;
  text-align: center;
}

.type {
  font-size: 0.9rem;
  text-align: center;
  margin-top: 0.75rem;
  width: 8rem;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.btn,
.ios-switch,
.ios-switch::before {
  border-radius: 31px;
  width: 102px;
  height: 62px;
  background-color: #A9A9A9;
  outline: none;
}
.ios-switch {
  position: relative;
  appearance: none;
  cursor: pointer;
  transition: all 100ms;
}
.ios-switch::before {
  position: absolute;
  content: "";
  transition: all 300ms cubic-bezier(0.45, 1, 0.4, 1);
}
.ios-switch::after {
  position: absolute;
  left: 4px;
  top: 4px;
  border-radius: 27px;
  width: 54px;
  height: 54px;
  background-color: #fff;
  box-shadow: 1px 1px 5px rgba(0, 0, 0, 0.3);
  content: "";
  transition: all 300ms cubic-bezier(0.4, 0.4, 0.25, 1.35);
}
.ios-switch.check {
  background-color: #5eb662;
}
.ios-switch.check::before {
  transform: scale(0);
}
.ios-switch.check::after {
  transform: translateX(40px);
}
